<div class="container">
  <h1><%= @flat.name %></h1>
  <h2><%= @flat.address %></h2>
  <h2><%= @flat.price %>£/night</h2>
  <h2><%= @flat.description %></h2>

  <% if @flat.photo.attached?%>
    <%= cl_image_tag @flat.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>
<div class="container">
  <% if current_user == @flat.user%>
    <%= link_to "Edit", edit_flat_path, class: "btn btn-primary" %>
  <% end  %>
    <%= link_to "Back", flats_path, class: "btn btn-primary" %>


  <%= link_to "Book the flat", new_flat_booking_path(@flat), class: "btn btn-primary"  %>


  <p>Flat bookings</p>
  <ul>
    <%@bookings.each do |b|  %>
      <li><%= b.start_date %>
      <%= b.end_date %>
      <%= b.cost %> £
      <%= link_to "delete", booking_path(b), method: :delete, data: {confirm: "Are you sure?"} %></li>
    <%end %>
  </ul>
</div>


<div id="map">
   style="width: 100%; height: 600px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
 </div>

