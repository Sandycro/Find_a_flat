<div class="container">
<h1><%= @flat.name %></h1>
<h2><%= @flat.address %></h2>
  <%= cl_image_tag @flat.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<div class="container">
  <%= link_to "Edit", edit_flat_path, class: "btn btn-primary" %>
  <%= link_to "Back", flats_path, class: "btn btn-primary" %>
</div>

<%= link_to "Book the flat", new_flat_booking_path(@flat) %>

<p>Flat bookings</p>
<ul>
  <%@bookings.each do |b|  %>
    <li><%= b.start_date %>
    <%= b.end_date %> 
    <%= link_to "delete", booking_path(b), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <%end %>
</ul>

<%= link_to "Edit", edit_flat_path(@flat) %>

